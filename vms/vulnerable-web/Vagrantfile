# Vulnerable Web Server VM Configuration
Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/focal64"
  config.vm.hostname = "vulnerable-web"
  
  # Network configuration
  config.vm.network "private_network", ip: "192.168.1.10"
  
  # VM specifications
  config.vm.provider "virtualbox" do |vb|
    vb.name = "CyberRange-VulnerableWeb"
    vb.memory = "1024"
    vb.cpus = 2
  end
  
  # Provisioning script
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    apt-get install -y apache2 mysql-server php php-mysql
    
    # Install DVWA (Damn Vulnerable Web Application)
    cd /var/www/html
    git clone https://github.com/digininja/DVWA.git
    chown -R www-data:www-data DVWA/
    chmod -R 755 DVWA/
    
    # Configure MySQL
    mysql -e "CREATE DATABASE dvwa;"
    mysql -e "CREATE USER 'dvwa'@'localhost' IDENTIFIED BY 'password';"
    mysql -e "GRANT ALL PRIVILEGES ON dvwa.* TO 'dvwa'@'localhost';"
    mysql -e "FLUSH PRIVILEGES;"
    
    # Configure DVWA
    cp DVWA/config/config.inc.php.dist DVWA/config/config.inc.php
    sed -i "s/impossible/low/g" DVWA/config/config.inc.php
    
    # Start services
    systemctl enable apache2
    systemctl start apache2
    systemctl enable mysql
    systemctl start mysql
    
    # Install additional vulnerable services
    apt-get install -y vsftpd telnetd
    
    # Configure FTP with weak credentials
    echo "vulnerable:password" | chpasswd
    useradd -m vulnerable
    echo "vulnerable:password" | chpasswd
    
    # Enable telnet
    systemctl enable inetd
    systemctl start inetd
    
    echo "Vulnerable Web VM setup complete!"
  SHELL
end

# Kali Linux Attacker VM Configuration
Vagrant.configure("2") do |config|
  config.vm.box = "kalilinux/rolling"
  config.vm.hostname = "kali-attacker"
  
  # Network configuration
  config.vm.network "private_network", ip: "192.168.1.100"
  
  # VM specifications
  config.vm.provider "virtualbox" do |vb|
    vb.name = "CyberRange-KaliAttacker"
    vb.memory = "2048"
    vb.cpus = 2
    vb.gui = true
  end
  
  # Provisioning script
  config.vm.provision "shell", inline: <<-SHELL
    apt-get update
    apt-get install -y kali-tools-top10 kali-tools-web kali-tools-information-gathering
    
    # Install additional tools
    apt-get install -y nmap nikto dirb gobuster sqlmap burpsuite
    apt-get install -y metasploit-framework exploitdb
    
    # Install web tools
    apt-get install -y firefox-esr
    
    # Create desktop shortcuts for common tools
    mkdir -p /home/vagrant/Desktop
    
    cat > /home/vagrant/Desktop/nmap.desktop << 'EOF'
[Desktop Entry]
Version=1.0
Type=Application
Name=Nmap
Comment=Network Mapper
Exec=gnome-terminal -- nmap
Icon=nmap
Terminal=false
Categories=Network;Security;
EOF
    
    cat > /home/vagrant/Desktop/burpsuite.desktop << 'EOF'
[Desktop Entry]
Version=1.0
Type=Application
Name=Burp Suite
Comment=Web Application Security Testing
Exec=burpsuite
Icon=burpsuite
Terminal=false
Categories=Network;Security;
EOF
    
    chown -R vagrant:vagrant /home/vagrant/Desktop
    chmod +x /home/vagrant/Desktop/*.desktop
    
    # Configure Metasploit database
    systemctl enable postgresql
    systemctl start postgresql
    msfdb init
    
    echo "Kali Attacker VM setup complete!"
  SHELL
end
